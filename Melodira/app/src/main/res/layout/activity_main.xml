<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bone_white">

    <!-- NOTA: Quité el btnFavTop como pediste -->

    <!-- Título superior (Opcional, para balancear el espacio vacío arriba) -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproduciendo ahora"
        android:textSize="16sp"
        android:textColor="@color/pure_black"
        android:textStyle="bold"
        android:alpha="0.8"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Carátula del Álbum -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvCoverContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/bone_white"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.38"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="60dp"
            android:src="@drawable/ic_note_minimal" />
    </androidx.cardview.widget.CardView>


    <!-- Metadata -->
    <LinearLayout
        android:id="@+id/metaContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cvCoverContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:text="Canción"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/pure_black"
            android:gravity="center"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:text="Artista"
            android:textSize="18sp"
            android:textColor="@color/pure_black"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/tvAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Álbum"
            android:textSize="14sp"
            android:textColor="@color/gray_hint"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>

    <!-- NUEVO: Controles de Estado (Shuffle / Repeat) -->
    <!-- Justo encima de la barra de progreso -->
    <RelativeLayout
        android:id="@+id/statusControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/metaContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <!-- Botón Shuffle (Izquierda) -->
        <ImageButton
            android:id="@+id/btnShuffle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_shuffle"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/gray_hint"
            android:scaleType="fitCenter"/>
        <!-- Nota: Inicia gris (desactivado) -->

        <!-- Botón Repeat (Derecha) -->
        <ImageButton
            android:id="@+id/btnRepeat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_repeat"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/pure_black"
            android:scaleType="fitCenter"/>
    </RelativeLayout>


    <!-- Barra de Progreso -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressTint="@color/pure_black"
        android:thumbTint="@color/pure_black"
        android:progressBackgroundTint="@color/gray_hint"
        app:layout_constraintTop_toBottomOf="@id/statusControls"
        app:layout_constraintBottom_toTopOf="@+id/controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tvTimeCur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/pure_black"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="@id/seekBar"
        app:layout_constraintTop_toBottomOf="@id/seekBar"/>

    <TextView
        android:id="@+id/tvTimeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="@color/pure_black"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@id/seekBar"
        app:layout_constraintTop_toBottomOf="@id/seekBar"/>

    <!-- Controles Principales Modificados (+10s / -10s) -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp">

        <!-- Anterior -->
        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_prev_minimal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="12dp"/>

        <!-- Retroceder 10s -->
        <ImageButton
            android:id="@+id/btnRewind10"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_replay_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@color/pure_black"
            android:padding="8dp"
            android:layout_marginHorizontal="8dp"/>

        <!-- Play/Pause (Más grande) -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_play_minimal"
            android:background="@color/bone_white"
            android:elevation="4dp"
            android:scaleType="centerInside"
            android:padding="0dp"
            android:layout_marginHorizontal="12dp"/>
        <!-- Sugerencia: Ponle un background circular blanco para resaltar -->

        <!-- Adelantar 10s -->
        <ImageButton
            android:id="@+id/btnForward10"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_forward_10"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            app:tint="@color/pure_black"
            android:padding="8dp"
            android:layout_marginHorizontal="8dp"/>

        <!-- Siguiente -->
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_next_minimal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- DOCK IGUAL AL DE PLAYLIST -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnOpenPlaylist"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_playlist_minimal"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/gray_hint"
            android:scaleType="centerInside"/>

        <ImageButton
            android:id="@+id/btnGoToPlayer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play_minimal"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/pure_black"
            android:scaleType="centerInside"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
