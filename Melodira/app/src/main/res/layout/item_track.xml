<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/transparent">

    <!-- Layout principal del renglón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground">

        <!-- 1. Mini Carátula (Borde redondeado sutil) -->
        <androidx.cardview.widget.CardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E5E5E5">

            <ImageView
                android:id="@+id/ivMiniCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_note_minimal"
                android:scaleType="centerInside" />
        </androidx.cardview.widget.CardView>

        <!-- 2. Textos (Título y Artista) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de la Canción"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/pure_black"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvItemArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artista"
                android:textSize="14sp"
                android:textColor="@color/gray_hint"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- 3. Botón de menú "Más opciones" (Tres puntitos verticales) -->
        <!-- Opcional: Si no usas este botón, puedes quitarlo, pero se ve pro -->
        <ImageView
            android:id="@+id/ivMenuMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert_minimal"
            android:padding="2dp"
            app:tint="@color/gray_hint"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
