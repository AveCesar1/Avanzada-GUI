<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivHandle"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:padding="4dp"/>

        <ImageView
            android:id="@+id/ivMiniCover"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivHandle"
            android:layout_marginStart="8dp"
            android:src="@android:drawable/ic_media_play"/>

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivMiniCover"
            android:layout_marginStart="8dp"
            android:text="Título"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvItemArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemTitle"
            android:layout_toEndOf="@id/ivMiniCover"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:text="Artista"/>

        <TextView
            android:id="@+id/tvItemAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemArtist"
            android:layout_toEndOf="@id/ivMiniCover"
            android:layout_marginStart="8dp"
            android:textStyle="italic"
            android:text="Álbum"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
