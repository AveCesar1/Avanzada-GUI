<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MÃ¡quina Expendedora Premium" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" 
        Background="White">

    <Window.Resources>
        <!-- Paleta de colores moderna -->
        <SolidColorBrush x:Key="PrimaryGradientStart">#667eea</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryGradientEnd">#764ba2</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColor">#4CAF50</SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor">#FF6B35</SolidColorBrush>
        <SolidColorBrush x:Key="DarkText">#2D3748</SolidColorBrush>
        <SolidColorBrush x:Key="LightText">#718096</SolidColorBrush>
        <SolidColorBrush x:Key="CardBackground">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="SurfaceColor">#F7FAFC</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor">#E2E8F0</SolidColorBrush>

        <!-- Gradiente principal -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Sombras -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="20" ShadowDepth="3" Opacity="0.1"/>
        <DropShadowEffect x:Key="ButtonShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>

        <!-- Estilos modernizados -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource ButtonShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="12" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        </Style>

        <Style x:Key="ProductButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="15,20"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="MoneyButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Padding" Value="25,15"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <!-- Estilo para tarjetas -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <!-- Estilo para textos -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>

        <Style x:Key="SubheaderText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource LightText}"/>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource SurfaceColor}">
        <!-- Fondo decorativo -->
        <Rectangle VerticalAlignment="Top" Height="200" Fill="{StaticResource PrimaryGradient}" 
                   Opacity="0.05" Stretch="Fill"/>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,30">
                <TextBlock Text="ðŸš€ MÃQUINA EXPENDEDORA" Style="{StaticResource HeaderText}" 
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Selecciona tu producto favorito y realiza tu compra" 
                           Style="{StaticResource BodyText}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Panel de Productos -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,15,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="ðŸ›ï¸ Productos Disponibles" Style="{StaticResource SubheaderText}" 
                               Margin="0,0,0,20"/>

                    <!-- Grid de productos 3x3 -->
                    <ItemsControl x:Name="ProductosContainer" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="3" HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding DisplayText}" Style="{StaticResource ProductButton}" 
                                        Click="ProductButton_Click" Tag="{Binding}" Margin="10"
                                        ToolTip="Haz clic para seleccionar este producto"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Panel de Pago -->
                    <StackPanel Grid.Row="2" Margin="0,30,0,0">
                        <TextBlock Text="ðŸ’³ MÃ©todo de Pago" Style="{StaticResource SubheaderText}" 
                                   Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Selecciona las denominaciones:" Style="{StaticResource BodyText}" 
                                   Margin="0,0,0,10"/>
                        
                        <WrapPanel x:Name="MoneyButtonsPanel" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <!-- Los botones de dinero se generarÃ¡n en cÃ³digo -->
                        </WrapPanel>

                        <Border Background="{StaticResource SurfaceColor}" CornerRadius="10" Padding="15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ’° Total ingresado: " Style="{StaticResource BodyText}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock x:Name="txtTotalIngresado" Text="$0.00" FontSize="20" 
                                           FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"
                                           Foreground="{StaticResource SecondaryColor}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panel de InformaciÃ³n -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸ“‹ Resumen de Compra" Style="{StaticResource SubheaderText}" 
                               Margin="0,0,0,20"/>
                    
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock x:Name="txtProductoSeleccionado" Text="ðŸ“¦ Producto: Ninguno seleccionado" 
                                   Style="{StaticResource BodyText}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtPrecioProducto" Text="ðŸ·ï¸ Precio: $0.00" 
                                   Style="{StaticResource BodyText}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="txtCambio" Text="ðŸ”„ Cambio: $0.00" 
                                   Style="{StaticResource BodyText}" Margin="0,0,0,8"/>
                    </StackPanel>
                    
                    <!-- Mensaje de estado -->
                    <Border Background="#FFF0F0F0" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                        <TextBlock x:Name="txtMensaje" Text="ðŸ‘† Selecciona un producto e ingresa el pago" 
                                   Style="{StaticResource BodyText}" TextWrapping="Wrap" 
                                   Foreground="{StaticResource LightText}" TextAlignment="Center"/>
                    </Border>

                    <!-- Botones de acciÃ³n -->
                    <StackPanel>
                        <Button x:Name="btnComprar" Content="âœ… Realizar Compra" 
                                Click="BtnComprar_Click" Style="{StaticResource ActionButton}" 
                                Margin="0,10,0,5"/>
                        <Button x:Name="btnCancelar" Content="âŒ Cancelar Compra" 
                                Click="BtnCancelar_Click" Style="{StaticResource SecondaryButton}" 
                                Margin="0,5,0,15"/>
                    </StackPanel>

                    <!-- Panel Administrador -->
                    <Separator Margin="0,20,0,20" Background="{StaticResource BorderColor}"/>
                    <TextBlock Text="âš™ï¸ Panel Administrador" Style="{StaticResource SubheaderText}" 
                               Margin="0,0,0,15"/>
                    <StackPanel>
                        <Button x:Name="btnRecargar" Content="ðŸ”„ Recargar MÃ¡quina" 
                                Click="BtnRecargar_Click" Style="{StaticResource SecondaryButton}" 
                                Margin="0,5"/>
                        <Button x:Name="btnVerEstado" Content="ðŸ“Š Ver Estado" 
                                Click="BtnVerEstado_Click" Style="{StaticResource SecondaryButton}" 
                                Margin="0,5"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Estado de la mÃ¡quina -->
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource CardStyle}" 
                    Margin="0,20,0,0" Background="{StaticResource PrimaryGradient}" Opacity="0.1">
                <TextBlock x:Name="txtEstado" Text="âœ… MÃ¡quina lista para usar" 
                           Style="{StaticResource BodyText}" HorizontalAlignment="Center" 
                           FontWeight="SemiBold" Foreground="{StaticResource DarkText}"/>
            </Border>
        </Grid>
    </Grid>
</Window>