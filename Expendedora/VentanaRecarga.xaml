<Window x:Class="MyWpfApp.VentanaRecarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recargar Máquina" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Recargar Máquina" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1">
            <Button x:Name="btnRecargarProductos" Content="Recargar Todos los Productos (Stock a 10)" 
                    Click="BtnRecargarProductos_Click" Margin="0,5" Padding="10" FontSize="14"/>
            <Button x:Name="btnRecargarDinero" Content="Recargar Todo el Dinero (10 de cada denominación)" 
                    Click="BtnRecargarDinero_Click" Margin="0,5" Padding="10" FontSize="14"/>
            <Button x:Name="btnRecargarTodo" Content="Recargar Todo" 
                    Click="BtnRecargarTodo_Click" Margin="0,15" Padding="15" FontSize="16" FontWeight="Bold" Background="#2D7FF6" Foreground="White"/>
        </StackPanel>

        <TextBlock x:Name="txtMensaje" Grid.Row="2" Margin="0,10,0,0" FontSize="12" Foreground="Green"/>
    </Grid>
</Window>