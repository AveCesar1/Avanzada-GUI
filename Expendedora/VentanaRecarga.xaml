<Window x:Class="MyWpfApp.VentanaRecarga"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš¡ Recargar MÃ¡quina" Height="650" Width="800" 
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Window.Resources>
        <!-- Paleta de colores -->
        <SolidColorBrush x:Key="PrimaryColor">#667eea</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryColor">#4CAF50</SolidColorBrush>
        <SolidColorBrush x:Key="AccentColor">#FF6B35</SolidColorBrush>
        <SolidColorBrush x:Key="DarkText">#2D3748</SolidColorBrush>
        <SolidColorBrush x:Key="LightText">#718096</SolidColorBrush>
        <SolidColorBrush x:Key="CardBackground">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="SurfaceColor">#F7FAFC</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor">#E2E8F0</SolidColorBrush>

        <!-- Estilos corregidos -->
        <Style x:Key="RecargaButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LargeButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SubheaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="BodyText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource LightText}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource SurfaceColor}">
        <!-- Fondo decorativo -->
        <Rectangle VerticalAlignment="Top" Height="150" Fill="{StaticResource PrimaryColor}" 
                   Opacity="0.05" Stretch="Fill"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="âš¡ Recargar MÃ¡quina" Style="{StaticResource HeaderText}" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <!-- Recarga RÃ¡pida -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ðŸš€ Recarga RÃ¡pida" Style="{StaticResource SubheaderText}" 
                               Margin="0,0,0,15"/>
                    
                    <Button x:Name="btnRecargarProductos" Content="ðŸ“¦ Recargar Productos (Stock a 10)" 
                            Click="BtnRecargarProductos_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                    
                    <Button x:Name="btnRecargarDinero" Content="ðŸ’° Recargar Todo el Dinero" 
                            Click="BtnRecargarDinero_Click" Style="{StaticResource PrimaryButtonStyle}"/>
                    
                    <Button x:Name="btnRecargarTodo" Content="ðŸŽ¯ Recargar Todo" 
                            Click="BtnRecargarTodo_Click" Style="{StaticResource LargeButtonStyle}" 
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- Recarga Individual -->
            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="ðŸŽ›ï¸ Recarga Individual" Style="{StaticResource SubheaderText}" 
                               Margin="0,0,0,15"/>
                    
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="DenominacionesContainer">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceColor}" 
                                            CornerRadius="8" Padding="15" Margin="0,8" 
                                            BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding DenominacionText}" 
                                                       FontSize="14" FontWeight="SemiBold" 
                                                       VerticalAlignment="Center" MinWidth="80"/>
                                            
                                            <TextBlock Grid.Column="1" Text="{Binding EstadoText}" 
                                                       Style="{StaticResource BodyText}" 
                                                       VerticalAlignment="Center" Margin="15,0"/>
                                            
                                            <TextBox Grid.Column="2" x:Name="txtCantidad" Text="1" 
                                                     Width="60" Margin="10,0" VerticalAlignment="Center" 
                                                     Tag="{Binding Denominacion}" 
                                                     TextChanged="TxtCantidad_TextChanged"/>
                                            
                                            <Button Grid.Column="3" Content="âž• Recargar" 
                                                    Click="BtnRecargarIndividual_Click" 
                                                    Style="{StaticResource RecargaButton}" 
                                                    Tag="{Binding Denominacion}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Mensajes -->
            <Border Grid.Row="3" Background="{StaticResource PrimaryColor}" Opacity="0.1" 
                    CornerRadius="8" Padding="15" Margin="0,15,0,0">
                <TextBlock x:Name="txtMensaje" Text="ðŸ‘† Selecciona una opciÃ³n de recarga" 
                           Style="{StaticResource BodyText}" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" FontWeight="SemiBold"/>
            </Border>
        </Grid>
    </Grid>
</Window>